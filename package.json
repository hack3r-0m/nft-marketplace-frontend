{
  "name": "nft-marketplace",
  "version": "1.0.0",
  "description": "Marketplace for crypto assets",
  "author": "Matic Network",
  "private": true,
  "scripts": {
    "dev":"npm run dev:testnet",
    "dev:testnet": "cross-env BUILD_ENV=testnet HOST=0.0.0.0 nuxt",
    "dev:staging": "cross-env BUILD_ENV=staging HOST=0.0.0.0 nuxt",
    "dev:mainnet": "cross-env BUILD_ENV=mainnet HOST=0.0.0.0 nuxt",
    "build:testnet": "cross-env NODE_ENV=development BUILD_ENV=testnet  nuxt generate",
    "build:staging": "cross-env NODE_ENV=development BUILD_ENV=staging nuxt generate",
    "build:mainnet": "cross-env NODE_ENV=production BUILD_ENV=mainnet nuxt generate",
    "start": "serve -p 3000 dist/",
    "precommit": "yarn run lint",
    "postinstall": "npx patch-package",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:fix": "eslint --ext .js,.vue --ignore-path .gitignore . --fix"
  },
  "dependencies": {
    "@0x/contract-wrappers": "^13.15.0",
    "@0x/order-utils": "^10.4.19",
    "@0x/subproviders": "^6.4.3",
    "@0x/utils": "^6.3.0",
    "@mapbox/node-pre-gyp": "^1.0.3",
    "@maticnetwork/dagger": "^0.2.0",
    "@maticnetwork/matic-design-system": "^0.2.24",
    "@maticnetwork/maticjs": "^2.0.37",
    "@maticnetwork/meta": "^2.4.13",
    "@maticnetwork/metamask-provider": "0.0.1",
    "@maticnetwork/walletconnect-provider": "0.0.1-beta.1",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/google-analytics": "^2.4.0",
    "@nuxtjs/pwa": "^3.3.5",
    "@nuxtjs/sentry": "^5.0.3",
    "@portis/web3": "^3.0.10",
    "@xkeshi/vue-qrcode": "^1.0.0",
    "axios": "^0.21.1",
    "bootstrap": "^4.5.0",
    "copy-to-clipboard": "^3.3.1",
    "eth-decoder": "0.0.1-beta.2",
    "ethjs": "^0.4.0",
    "ethjs-util": "^0.1.6",
    "jquery": "^1.9.1",
    "mixpanel-browser": "^2.41.0",
    "moment": "^2.29.1",
    "nuxt": "^2.15.4",
    "popper.js": "^1.16.1",
    "v-body-scroll-lock": "^1.1.3",
    "v-tooltip": "^2.1.3",
    "vue-class-component": "^7.2.6",
    "vue-i18n": "^8.24.3",
    "vue-lottie": "^0.2.1",
    "vue-prevent-unload": "^0.2.3",
    "web3": "^1.3.5"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.24.0",
    "node-sass": "^4.14.1",
    "sass-loader": "^10.1.1"
  }
}
